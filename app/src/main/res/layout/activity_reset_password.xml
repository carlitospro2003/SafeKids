<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imvForgotPassLoginSafeKids"
                android:layout_width="160dp"
                android:layout_height="135dp"
                android:layout_marginTop="76dp"
                android:layout_marginBottom="46dp"
                app:srcCompat="@drawable/iconosafekids" />

            <TextView
                android:id="@+id/textViewResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:fontFamily="@font/inter_bold"
                android:text="Restablecer contraseña"
                android:textColor="@color/strongBlueSafeKids"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewResetPassError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="42dp"
                android:text="Error de credenciales"
                android:background="@color/lightRedSafeKids"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewEmailResetPass"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/montserrat"
                android:text="Ingresa tu Nueva Contraseña"
                android:textColor="@color/black"
                android:textAllCaps="true" />

            <EditText
                android:id="@+id/editTextResetPass"
                android:layout_width="298dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Ingresa tu nueva contraseña"
                android:drawableEnd="@drawable/eye"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/black"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewResetPass"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/montserrat"
                android:text="Confirmar contraseña"
                android:textColor="@color/black"
                android:textAllCaps="true" />

            <EditText
                android:id="@+id/editTextResetPassword"
                android:layout_width="298dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Ingresa tu nueva contraseña"
                android:drawableEnd="@drawable/eye"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/black"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buttonResetPassord2"
                style="@style/buttomBlueStrong"
                android:text="Ingresar" />

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>