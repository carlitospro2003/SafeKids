<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildrenDetailActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/headerLayoutDetailChildren"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="@color/strongBlueSafeKids"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_bold"
            android:text="Hijo"
            android:textColor="@color/shortBlueSafeKids"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- CONTENIDO SCROLLEABLE -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayoutDetailChildren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photoDetailChildren"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:src="@drawable/iconosafekids"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Nombres"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtNameChildren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:paddingBottom="4dp"
                    android:text="Juan Antonio"
                    android:textColor="@color/greySafeKids"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/greySafeKids"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Apellidos"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtLastNameChildren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:paddingBottom="4dp"
                    android:text="Montoya"
                    android:textAllCaps="false"
                    android:textColor="@color/greySafeKids"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/greySafeKids"
                    android:layout_marginBottom="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Fecha de Nacimiento"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtDateChildren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:paddingBottom="4dp"
                    android:text="13/11/2003"
                    android:textColor="@color/greySafeKids"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/greySafeKids"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Escuela"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtSchoolChildren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:paddingBottom="4dp"
                    android:text="Venustiano Carranza"
                    android:textColor="@color/greySafeKids"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/greySafeKids"
                    android:layout_marginBottom="10dp"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>